{
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/levitarmouse/KISS-ORM"
        },
        {
            "type": "git",
            "url": "https://github.com/levitarmouse/KISS-REST"
        }
    ],
    "name": "levitarmouse/kiss-framework",
    "description": "Levitarmouse kiss-rest and kiss-orm together.",
    "license": "proprietary",
    "type": "project",
    "minimum-stability": "dev",
    "require": {
        "php" : ">=5.3.3",
        "levitarmouse/kiss-rest": "dev-dev",
        "levitarmouse/kiss-orm": "dev-dev"
    },
    "authors": [
        {
            "name": "Gabriel Prieto",
           "email": "levitarmouse@gmail.com"
        }
    ],
    "scripts": {
        "post-update-cmd":  ["php -r \"shell_exec('mkdir -p config/kissorm');\"",
                             "php -r \"shell_exec('ln -s ./vendor/levitarmouse/kiss_orm/tables.ini .');\"",
                             "php -r \"shell_exec('ln -s ./vendor/levitarmouse/kiss_orm/kissGen.php .');\"",
                             "php -r \"shell_exec('cd ./config/kissorm/; ln -s ../../vendor/levitarmouse/kiss_orm/config/Bootstrap.php .');\"",
                             "php -r \"shell_exec('cd ./config/kissorm/; ln -s ../../vendor/levitarmouse/kiss_orm/config/database.ini .');\"",
                             "",
                             "php -r \"shell_exec('mkdir -p App/controllers');\"",
                             "php -r \"shell_exec('mkdir -p config/kissrest');\"",
                             "php -r \"shell_exec('cd ./config/kissrest/; ln -s ../../vendor/levitarmouse/kiss_orm/config/Bootstrap.php .');\"",
                             ""],
        "post-package-install": [],
        "post-install-cmd": [],
        "post-autoload-dump": [],
        "post-create-project-cmd": []
    }
}